{
    "buildOnSave": true,
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "sourceMap": true,
        "outFile": "./fuel/public/assets/js/tsc.js"
    },
    "filesGlob": [
        "./typescript/**/*.ts"
    ],
    "files": [
        "./typescript/DefinitelyTyped/angularjs/angular.d.ts",
        "./typescript/DefinitelyTyped/jquery/jquery.d.ts",
        "./typescript/main.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
